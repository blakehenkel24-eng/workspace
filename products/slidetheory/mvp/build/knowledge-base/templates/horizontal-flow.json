{
  "id": "horizontal-flow",
  "name": "Horizontal Flow",
  "description": "Left-to-right process visualization for steps, workflows, timelines, or sequential logic. Inspired by Bain process maps.",
  "structure": {
    "grid": {
      "columns": 12,
      "gutter": "32px",
      "margin": "80px"
    },
    "zones": [
      {
        "id": "title-area",
        "type": "header",
        "gridColumn": "1 / -1",
        "gridRow": "1",
        "height": "auto",
        "padding": "60px 80px 24px",
        "borderBottom": "3px solid #0d2137"
      },
      {
        "id": "flow-container",
        "type": "content-flow",
        "gridColumn": "1 / -1",
        "gridRow": "2",
        "layout": "horizontal",
        "direction": "left-to-right",
        "gap": "0",
        "padding": "60px 80px",
        "marginTop": "20px"
      },
      {
        "id": "connector-line",
        "type": "decorative",
        "position": "absolute",
        "top": "50%",
        "left": "15%",
        "right": "15%",
        "height": "4px",
        "backgroundColor": "#334e68",
        "zIndex": "0"
      },
      {
        "id": "footer",
        "type": "footer",
        "gridColumn": "1 / -1",
        "gridRow": "3",
        "position": "absolute",
        "bottom": "24px",
        "left": "80px",
        "right": "80px",
        "borderTop": "1px solid #e4e4e7",
        "paddingTop": "24px"
      }
    ],
    "stepCard": {
      "width": "280px",
      "minHeight": "200px",
      "backgroundColor": "#ffffff",
      "border": "2px solid #e4e4e7",
      "borderRadius": "12px",
      "padding": "28px",
      "position": "relative",
      "zIndex": "1",
      "arrow": {
        "enabled": true,
        "position": "right",
        "style": "chevron",
        "color": "#334e68"
      }
    }
  },
  "typography": {
    "h1": {
      "fontSize": "52px",
      "fontWeight": "700",
      "color": "#0d2137",
      "lineHeight": "1.15",
      "letterSpacing": "-0.02em"
    },
    "h2": {
      "fontSize": "22px",
      "fontWeight": "600",
      "color": "#0d2137",
      "lineHeight": "1.3"
    },
    "body": {
      "fontSize": "16px",
      "fontWeight": "400",
      "color": "#52525b",
      "lineHeight": "1.5"
    },
    "stepNumber": {
      "fontSize": "14px",
      "fontWeight": "700",
      "textTransform": "uppercase",
      "letterSpacing": "0.1em",
      "color": "#2563eb",
      "marginBottom": "12px"
    },
    "footer": {
      "fontSize": "14px",
      "fontWeight": "400",
      "color": "#a1a1aa"
    }
  },
  "design": {
    "colorPalette": {
      "primary": "#0d2137",
      "secondary": "#334e68",
      "accent": "#2563eb",
      "accentLight": "#dbeafe",
      "background": "#ffffff",
      "surface": "#fafafa",
      "border": "#e4e4e7"
    },
    "stepNumbering": {
      "style": "badge",
      "backgroundColor": "#2563eb",
      "color": "#ffffff",
      "width": "36px",
      "height": "36px",
      "borderRadius": "50%",
      "fontSize": "16px",
      "fontWeight": "700",
      "position": "absolute",
      "top": "-18px",
      "left": "28px"
    },
    "connector": {
      "type": "line",
      "style": "solid",
      "color": "#334e68",
      "width": "3px",
      "arrowhead": true
    }
  },
  "variants": {
    "process": {
      "showNumbers": true,
      "showArrows": true,
      "cardStyle": "elevated"
    },
    "timeline": {
      "showNumbers": false,
      "showDates": true,
      "cardStyle": "minimal",
      "connectorStyle": "dashed"
    },
    "pipeline": {
      "showNumbers": false,
      "showMetrics": true,
      "cardStyle": "compact",
      "funnelShape": true
    }
  },
  "audienceAdaptations": {
    "c-suite": {
      "maxSteps": 4,
      "cardWidth": "320px",
      "whitespaceRatio": 0.4,
      "showDetails": false,
      "emphasizeOutcome": true
    },
    "board": {
      "maxSteps": 5,
      "cardWidth": "280px",
      "whitespaceRatio": 0.3,
      "showDetails": true
    },
    "external-client": {
      "maxSteps": 5,
      "cardWidth": "260px",
      "whitespaceRatio": 0.25,
      "showDetails": true
    },
    "internal-team": {
      "maxSteps": 6,
      "cardWidth": "240px",
      "whitespaceRatio": 0.2,
      "showDetails": true,
      "showSubsteps": true
    },
    "pe-investors": {
      "maxSteps": 4,
      "cardWidth": "300px",
      "whitespaceRatio": 0.25,
      "showMetrics": true,
      "emphasizeROI": true
    }
  },
  "presentationMode": {
    "presentation": {
      "detailLevel": "headlines-only",
      "maxSteps": 3,
      "animate": true
    },
    "read": {
      "detailLevel": "full",
      "maxSteps": 5,
      "animate": false
    }
  }
}
