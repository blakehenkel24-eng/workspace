{
  "id": "general",
  "name": "General",
  "description": "Flexible multi-section layout adaptable to various content types. Supports title, subtitle, 2-3 content blocks, and optional visual element.",
  "structure": {
    "grid": {
      "columns": 12,
      "gutter": "32px",
      "margin": "80px"
    },
    "zones": [
      {
        "id": "title-area",
        "type": "header",
        "gridColumn": "1 / -1",
        "gridRow": "1",
        "height": "auto",
        "padding": "60px 80px 24px",
        "borderBottom": "3px solid #0d2137"
      },
      {
        "id": "content-primary",
        "type": "content",
        "gridColumn": "1 / 7",
        "gridRow": "2",
        "padding": "40px 0 40px 80px",
        "marginTop": "20px"
      },
      {
        "id": "content-secondary",
        "type": "content",
        "gridColumn": "7 / -1",
        "gridRow": "2",
        "padding": "40px 80px 40px 32px",
        "marginTop": "20px"
      },
      {
        "id": "tertiary-row",
        "type": "content-row",
        "gridColumn": "1 / -1",
        "gridRow": "3",
        "padding": "0 80px 40px",
        "layout": "flex",
        "gap": "32px"
      },
      {
        "id": "footer",
        "type": "footer",
        "gridColumn": "1 / -1",
        "gridRow": "4",
        "position": "absolute",
        "bottom": "24px",
        "left": "80px",
        "right": "80px",
        "borderTop": "1px solid #e4e4e7",
        "paddingTop": "24px"
      }
    ],
    "contentBlocks": {
      "maxBlocks": 4,
      "defaultBlocks": 2,
      "blockStyles": [
        {
          "type": "text",
          "backgroundColor": "transparent",
          "padding": "0",
          "borderLeft": "4px solid #0d2137",
          "paddingLeft": "24px"
        },
        {
          "type": "highlight",
          "backgroundColor": "#f4f4f5",
          "padding": "24px",
          "borderRadius": "8px",
          "borderLeft": "4px solid #2563eb"
        },
        {
          "type": "metric",
          "backgroundColor": "#fafafa",
          "padding": "28px 32px",
          "borderRadius": "8px",
          "borderTop": "4px solid #0d2137",
          "textAlign": "center"
        },
        {
          "type": "callout",
          "backgroundColor": "#0d2137",
          "color": "#ffffff",
          "padding": "24px 32px",
          "borderRadius": "8px"
        }
      ]
    }
  },
  "typography": {
    "h1": {
      "fontSize": "52px",
      "fontWeight": "700",
      "color": "#0d2137",
      "lineHeight": "1.15",
      "letterSpacing": "-0.02em"
    },
    "h2": {
      "fontSize": "28px",
      "fontWeight": "300",
      "color": "#52525b",
      "lineHeight": "1.3"
    },
    "h3": {
      "fontSize": "22px",
      "fontWeight": "600",
      "color": "#0d2137",
      "lineHeight": "1.3",
      "marginBottom": "16px"
    },
    "body": {
      "fontSize": "16px",
      "fontWeight": "400",
      "color": "#52525b",
      "lineHeight": "1.6"
    },
    "bullet": {
      "fontSize": "16px",
      "fontWeight": "400",
      "color": "#52525b",
      "lineHeight": "1.6",
      "markerColor": "#0d2137",
      "markerStyle": "arrow"
    },
    "metricValue": {
      "fontSize": "42px",
      "fontWeight": "700",
      "color": "#0d2137",
      "lineHeight": "1.2"
    },
    "metricLabel": {
      "fontSize": "14px",
      "fontWeight": "600",
      "textTransform": "uppercase",
      "letterSpacing": "0.05em",
      "color": "#71717a"
    },
    "footer": {
      "fontSize": "14px",
      "fontWeight": "400",
      "color": "#a1a1aa"
    }
  },
  "design": {
    "colorPalette": {
      "primary": "#0d2137",
      "secondary": "#334e68",
      "accent": "#2563eb",
      "accent2": "#16a34a",
      "accent3": "#f59e0b",
      "background": "#ffffff",
      "surface": "#fafafa",
      "surfaceDark": "#f4f4f5",
      "textPrimary": "#18181b",
      "textSecondary": "#52525b",
      "textTertiary": "#71717a",
      "border": "#e4e4e7"
    },
    "spacing": {
      "xs": "8px",
      "sm": "16px",
      "md": "24px",
      "lg": "32px",
      "xl": "40px",
      "2xl": "60px"
    },
    "bulletStyles": {
      "arrow": {
        "content": "\"→\"",
        "color": "#0d2137",
        "fontWeight": "700",
        "marginRight": "12px"
      },
      "check": {
        "content": "\"✓\"",
        "color": "#16a34a",
        "fontWeight": "700",
        "marginRight": "12px"
      },
      "dash": {
        "content": "\"—\"",
        "color": "#71717a",
        "fontWeight": "500",
        "marginRight": "12px"
      }
    }
  },
  "layoutVariants": {
    "two-column": {
      "primaryColumn": 6,
      "secondaryColumn": 6,
      "showTertiary": false
    },
    "three-column": {
      "primaryColumn": 4,
      "secondaryColumn": 4,
      "tertiaryColumn": 4,
      "showTertiary": true
    },
    "left-heavy": {
      "primaryColumn": 8,
      "secondaryColumn": 4,
      "showTertiary": false
    },
    "right-heavy": {
      "primaryColumn": 4,
      "secondaryColumn": 8,
      "showTertiary": false
    }
  },
  "audienceAdaptations": {
    "c-suite": {
      "layout": "two-column",
      "maxBlocks": 2,
      "whitespaceRatio": 0.4,
      "fontSizeMultiplier": 1.1,
      "bulletStyle": "arrow",
      "emphasizeHeadlines": true
    },
    "board": {
      "layout": "two-column",
      "maxBlocks": 3,
      "whitespaceRatio": 0.3,
      "fontSizeMultiplier": 1.0,
      "bulletStyle": "arrow"
    },
    "external-client": {
      "layout": "left-heavy",
      "maxBlocks": 3,
      "whitespaceRatio": 0.25,
      "fontSizeMultiplier": 1.0,
      "bulletStyle": "arrow"
    },
    "internal-team": {
      "layout": "three-column",
      "maxBlocks": 4,
      "whitespaceRatio": 0.2,
      "fontSizeMultiplier": 0.95,
      "bulletStyle": "dash",
      "showMoreDetail": true
    },
    "pe-investors": {
      "layout": "left-heavy",
      "maxBlocks": 3,
      "whitespaceRatio": 0.25,
      "fontSizeMultiplier": 1.0,
      "bulletStyle": "check",
      "showMetrics": true
    }
  },
  "presentationMode": {
    "presentation": {
      "detailLevel": "headlines",
      "maxBullets": 3,
      "maxBlocks": 2,
      "bulletMaxLength": 80,
      "showVisual": true
    },
    "read": {
      "detailLevel": "full",
      "maxBullets": 5,
      "maxBlocks": 4,
      "bulletMaxLength": 140,
      "showVisual": true
    }
  }
}
