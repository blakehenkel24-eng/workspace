{
  "id": "executive-summary",
  "name": "Executive Summary",
  "description": "Top-down communication with main insight, 3 supporting points, and clear recommendation. Inspired by Pyramid Principle structure.",
  "structure": {
    "grid": {
      "columns": 12,
      "gutter": "24px",
      "margin": "80px"
    },
    "zones": [
      {
        "id": "title-area",
        "type": "header",
        "gridColumn": "1 / -1",
        "gridRow": "1",
        "height": "auto",
        "padding": "60px 80px 24px",
        "borderBottom": "3px solid #0d2137"
      },
      {
        "id": "main-insight",
        "type": "headline",
        "gridColumn": "1 / -1",
        "gridRow": "2",
        "height": "auto",
        "marginTop": "40px",
        "marginBottom": "32px",
        "padding": "0 80px"
      },
      {
        "id": "supporting-points",
        "type": "content-flow",
        "gridColumn": "1 / -1",
        "gridRow": "3",
        "layout": "vertical",
        "gap": "32px",
        "padding": "0 80px",
        "items": [
          {
            "type": "numbered-point",
            "numberPosition": "left",
            "numberStyle": "box",
            "numberSize": "48px",
            "contentWidth": "calc(100% - 68px)"
          }
        ]
      },
      {
        "id": "recommendation",
        "type": "callout",
        "gridColumn": "1 / -1",
        "gridRow": "4",
        "backgroundColor": "#0d2137",
        "textColor": "#ffffff",
        "padding": "32px 40px",
        "borderRadius": "8px",
        "marginTop": "40px",
        "marginLeft": "80px",
        "marginRight": "80px"
      },
      {
        "id": "footer",
        "type": "footer",
        "gridColumn": "1 / -1",
        "gridRow": "5",
        "position": "absolute",
        "bottom": "24px",
        "left": "80px",
        "right": "80px",
        "borderTop": "1px solid #e4e4e7",
        "paddingTop": "24px"
      }
    ]
  },
  "typography": {
    "h1": {
      "fontSize": "52px",
      "fontWeight": "700",
      "color": "#0d2137",
      "lineHeight": "1.15",
      "letterSpacing": "-0.02em"
    },
    "h2": {
      "fontSize": "28px",
      "fontWeight": "300",
      "color": "#52525b",
      "lineHeight": "1.3"
    },
    "h3": {
      "fontSize": "24px",
      "fontWeight": "600",
      "color": "#0d2137",
      "lineHeight": "1.3"
    },
    "body": {
      "fontSize": "18px",
      "fontWeight": "400",
      "color": "#52525b",
      "lineHeight": "1.6"
    },
    "label": {
      "fontSize": "14px",
      "fontWeight": "600",
      "textTransform": "uppercase",
      "letterSpacing": "0.1em",
      "color": "#a1a1aa"
    },
    "recommendation": {
      "fontSize": "24px",
      "fontWeight": "500",
      "color": "#ffffff",
      "lineHeight": "1.4"
    },
    "footer": {
      "fontSize": "14px",
      "fontWeight": "400",
      "color": "#a1a1aa"
    }
  },
  "design": {
    "colorPalette": {
      "primary": "#0d2137",
      "secondary": "#334e68",
      "accent": "#2563eb",
      "background": "#ffffff",
      "surface": "#fafafa",
      "textPrimary": "#18181b",
      "textSecondary": "#52525b",
      "textTertiary": "#a1a1aa",
      "border": "#e4e4e7"
    },
    "spacing": {
      "xs": "8px",
      "sm": "16px",
      "md": "24px",
      "lg": "32px",
      "xl": "40px",
      "2xl": "60px"
    },
    "numberBox": {
      "width": "48px",
      "height": "48px",
      "backgroundColor": "#0d2137",
      "color": "#ffffff",
      "borderRadius": "4px",
      "fontSize": "24px",
      "fontWeight": "700"
    }
  },
  "audienceAdaptations": {
    "c-suite": {
      "titleMaxWords": 6,
      "bulletMaxLength": 100,
      "showRecommendation": true,
      "whitespaceRatio": 0.35,
      "fontSizeMultiplier": 1.1
    },
    "board": {
      "titleMaxWords": 8,
      "bulletMaxLength": 120,
      "showRecommendation": true,
      "whitespaceRatio": 0.3,
      "fontSizeMultiplier": 1.0
    },
    "external-client": {
      "titleMaxWords": 10,
      "bulletMaxLength": 140,
      "showRecommendation": true,
      "whitespaceRatio": 0.25,
      "fontSizeMultiplier": 1.0
    },
    "internal-team": {
      "titleMaxWords": 12,
      "bulletMaxLength": 160,
      "showRecommendation": false,
      "whitespaceRatio": 0.2,
      "fontSizeMultiplier": 0.95
    },
    "pe-investors": {
      "titleMaxWords": 8,
      "bulletMaxLength": 120,
      "showRecommendation": true,
      "whitespaceRatio": 0.25,
      "dataEmphasis": true,
      "fontSizeMultiplier": 1.0
    }
  },
  "presentationMode": {
    "presentation": {
      "detailLevel": "minimal",
      "maxPoints": 3,
      "showLabels": false,
      "emphasisOn": "headlines"
    },
    "read": {
      "detailLevel": "full",
      "maxPoints": 4,
      "showLabels": true,
      "emphasisOn": "content"
    }
  }
}
