{
  "id": "graph-chart",
  "name": "Graph/Chart",
  "description": "Data visualization layout for charts, graphs, and analytical displays. Optimized for bar charts, line graphs, and combination visualizations.",
  "structure": {
    "grid": {
      "columns": 12,
      "gutter": "24px",
      "margin": "80px"
    },
    "zones": [
      {
        "id": "title-area",
        "type": "header",
        "gridColumn": "1 / -1",
        "gridRow": "1",
        "height": "auto",
        "padding": "60px 80px 24px",
        "borderBottom": "3px solid #0d2137"
      },
      {
        "id": "chart-container",
        "type": "visualization",
        "gridColumn": "1 / 9",
        "gridRow": "2",
        "padding": "40px 0 40px 80px",
        "aspectRatio": "16:9",
        "marginTop": "20px"
      },
      {
        "id": "legend-insights",
        "type": "sidebar",
        "gridColumn": "9 / -1",
        "gridRow": "2",
        "padding": "40px 80px 40px 24px",
        "marginTop": "20px"
      },
      {
        "id": "data-table",
        "type": "table",
        "gridColumn": "1 / -1",
        "gridRow": "3",
        "padding": "0 80px 40px",
        "maxHeight": "200px"
      },
      {
        "id": "footer",
        "type": "footer",
        "gridColumn": "1 / -1",
        "gridRow": "4",
        "position": "absolute",
        "bottom": "24px",
        "left": "80px",
        "right": "80px",
        "borderTop": "1px solid #e4e4e7",
        "paddingTop": "24px"
      }
    ],
    "chartArea": {
      "backgroundColor": "#fafafa",
      "border": "1px solid #e4e4e7",
      "borderRadius": "8px",
      "padding": "32px"
    }
  },
  "typography": {
    "h1": {
      "fontSize": "52px",
      "fontWeight": "700",
      "color": "#0d2137",
      "lineHeight": "1.15",
      "letterSpacing": "-0.02em"
    },
    "h2": {
      "fontSize": "20px",
      "fontWeight": "600",
      "color": "#0d2137",
      "lineHeight": "1.3"
    },
    "body": {
      "fontSize": "14px",
      "fontWeight": "400",
      "color": "#52525b",
      "lineHeight": "1.5"
    },
    "chartLabel": {
      "fontSize": "12px",
      "fontWeight": "500",
      "color": "#71717a"
    },
    "chartValue": {
      "fontSize": "14px",
      "fontWeight": "700",
      "color": "#0d2137"
    },
    "insight": {
      "fontSize": "16px",
      "fontWeight": "500",
      "color": "#334e68",
      "lineHeight": "1.4"
    },
    "footer": {
      "fontSize": "14px",
      "fontWeight": "400",
      "color": "#a1a1aa"
    }
  },
  "design": {
    "colorPalette": {
      "primary": "#0d2137",
      "secondary": "#334e68",
      "accent": "#2563eb",
      "accent2": "#16a34a",
      "accent3": "#f59e0b",
      "accent4": "#dc2626",
      "background": "#ffffff",
      "surface": "#fafafa",
      "gridLine": "#e4e4e7",
      "axis": "#a1a1aa"
    },
    "chartDefaults": {
      "bar": {
        "borderRadius": "4px 4px 0 0",
        "gap": "8px",
        "minHeight": "20px"
      },
      "line": {
        "strokeWidth": "3px",
        "pointSize": "8px",
        "pointFill": "#ffffff",
        "pointStrokeWidth": "2px"
      },
      "pie": {
        "innerRadius": "0.6",
        "labelPosition": "outside"
      },
      "axis": {
        "color": "#a1a1aa",
        "gridColor": "#f4f4f5",
        "gridStyle": "dashed",
        "labelColor": "#71717a",
        "fontSize": "12px"
      }
    },
    "legend": {
      "position": "top-right",
      "layout": "vertical",
      "itemGap": "12px",
      "markerSize": "12px",
      "markerStyle": "square"
    },
    "callout": {
      "backgroundColor": "#dbeafe",
      "borderLeft": "4px solid #2563eb",
      "padding": "16px 20px",
      "borderRadius": "0 8px 8px 0",
      "marginBottom": "16px"
    }
  },
  "chartTypes": {
    "bar": {
      "orientation": "vertical",
      "stacked": false,
      "showValues": true,
      "showLabels": true
    },
    "line": {
      "smooth": true,
      "showPoints": true,
      "showArea": false,
      "multiSeries": true
    },
    "waterfall": {
      "showConnectorLines": true,
      "colorPositive": "#16a34a",
      "colorNegative": "#dc2626",
      "colorTotal": "#0d2137"
    },
    "combo": {
      "primaryType": "bar",
      "secondaryType": "line",
      "dualAxis": true
    }
  },
  "audienceAdaptations": {
    "c-suite": {
      "chartType": "summary",
      "maxSeries": 2,
      "showGrid": false,
      "showLegend": false,
      "emphasizeTrend": true,
      "whitespaceRatio": 0.3
    },
    "board": {
      "chartType": "standard",
      "maxSeries": 3,
      "showGrid": true,
      "showLegend": true,
      "whitespaceRatio": 0.25
    },
    "external-client": {
      "chartType": "standard",
      "maxSeries": 3,
      "showGrid": true,
      "showLegend": true,
      "showDataLabels": true,
      "whitespaceRatio": 0.2
    },
    "internal-team": {
      "chartType": "detailed",
      "maxSeries": 5,
      "showGrid": true,
      "showLegend": true,
      "showDataTable": true,
      "whitespaceRatio": 0.15
    },
    "pe-investors": {
      "chartType": "detailed",
      "maxSeries": 4,
      "showGrid": true,
      "showLegend": true,
      "showDataLabels": true,
      "showBenchmarks": true,
      "whitespaceRatio": 0.2
    }
  },
  "presentationMode": {
    "presentation": {
      "detailLevel": "high-level",
      "showTable": false,
      "maxDataPoints": 6,
      "animate": true
    },
    "read": {
      "detailLevel": "full",
      "showTable": true,
      "maxDataPoints": 12,
      "animate": false
    }
  },
  "dataTable": {
    "style": "compact",
    "striped": true,
    "headerBackground": "#0d2137",
    "headerColor": "#ffffff",
    "rowHeight": "40px",
    "fontSize": "14px"
  }
}
