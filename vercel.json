{
  "version": 2,
  "name": "slidetheory",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/generate",
      "dest": "/api/generate.js"
    },
    {
      "src": "/api/generate-slide-v2",
      "dest": "/api/generate-v2.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/waitlist",
      "dest": "/api/waitlist.js"
    },
    {
      "src": "/app/(.*)",
      "dest": "/public/app/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "KIMI_API_KEY": "@kimi-api-key",
    "KIMI_BASE_URL": "https://api.moonshot.cn/v1",
    "SUPABASE_URL": "@supabase-url",
    "SUPABASE_ANON_KEY": "@supabase-anon-key"
  }
}
