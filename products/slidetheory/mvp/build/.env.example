# SlideTheory Environment Configuration
# Copy this file to .env and fill in your actual values

# Kimi API Configuration (Required)
KIMI_API_KEY=sk-kimi-your-api-key-here
KIMI_BASE_URL=https://api.moonshot.cn/v1

# Server Configuration
PORT=3000
NODE_ENV=development

# Security (Generate a random string for production)
SESSION_SECRET=your-secret-key-here

# Optional: Database (for future auth)
# DATABASE_URL=postgresql://user:pass@localhost:5432/slidetheory
# REDIS_URL=redis://localhost:6379

# Optional: Stripe (for billing)
# STRIPE_SECRET_KEY=sk_live_your_stripe_key
