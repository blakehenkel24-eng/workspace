# Production Environment Configuration
NODE_ENV=production
PORT=3000

# AI Configuration (using Kimi API)
KIMI_API_KEY=${KIMI_API_KEY}
KIMI_MODEL=kimi-coding/k2p5
KIMI_API_BASE=https://api.moonshot.cn/v1
AI_TIMEOUT=20000
AI_MAX_RETRIES=3
AI_TEMPERATURE=0.6

# Paths
SLIDES_DIR=./tmp/slides
EXPORTS_DIR=./tmp/exports
ANALYTICS_FILE=./tmp/analytics.json

# Caching (Redis)
CACHE_ENABLED=true
REDIS_URL=redis://redis:6379
CACHE_TTL_SLIDE=604800
CACHE_TTL_CONTENT=86400
CACHE_TTL_TEMPLATE=2592000
CACHE_TTL_ANALYTICS=3600

# Performance
SLOW_REQUEST_THRESHOLD=2000
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
MAX_CONCURRENT_GENERATIONS=10

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# CDN / Asset Optimization
CDN_ENABLED=true
CDN_BASE_URL=https://cdn.slidetheory.app
CDN_BROTLI=true
CDN_GZIP=true

# Exports
EXPORT_CLEANUP_ENABLED=true
CLEANUP_SLIDES_MS=43200000
CLEANUP_EXPORTS_MS=1800000

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200
ALLOWED_ORIGINS=https://slidetheory.app,https://www.slidetheory.app

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
DATADOG_API_KEY=${DATADOG_API_KEY}

# Health Check
HEALTH_CHECK_TIMEOUT=5000
